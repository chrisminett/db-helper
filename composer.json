{
    "name": "phlib/db-helper",
    "description": "DB helpers to complement phlib/db",
    "keywords": ["mysql", "db", "helper"],
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster",
            "role": "developer"
        },
        {
            "name": "Luke Richards",
            "role": "developer"
        },
        {
            "name": "Chris Minett",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^5.6|^7",
        "ext-pdo": "*",
        "phlib/db": "^1",
        "symfony/console": "^3",
        "phlib/console-configuration": "^1.0",
        "phlib/console-process": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\DbHelper\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "php-mock/php-mock-phpunit": "^1.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\DbHelper\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/db"]
}
